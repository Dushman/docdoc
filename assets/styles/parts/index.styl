#index-page div[data-role='header'] 
	padding 1em 2em 
	display table
	width 100%

.city-dropdown-wrapper 
	float right
	position relative
	padding-right 20px

.city-dropdown-wrapper i
	position absolute 
	display block 
	right 0 
	top 6px 
	border-width 5px 
	border-style solid
	border-color transparent 
	border-top-color #29aaac

.city-dropdown-wrapper > span:first-child 
	color #29aaac
	font-family 'Circe-Regular'
	display block 
	position relative 
	padding-bottom 5px
	border-bottom 2px dotted #29aaac

.city-dropdown-wrapper > ul 
	display none 
	position absolute

.ui-bar-a, .ui-page-theme-a .ui-bar-inherit, html .ui-bar-a .ui-bar-inherit, html .ui-body-a .ui-bar-inherit, html body .ui-group-theme-a .ui-bar-inherit
	border none 
	background none 
	font-weight inherit 
	text-shadow none

.index-img-wrapper 
	position relative 
	overflow hidden 
	clear both 
	height 98px

.index-img-wrapper i 
	display block 
	margin 0 auto 
	sprite($s-logo)

.top-index-link
	clear both 
	position relative 
	overflow hidden 
	border-radius 35px

.ui-page-theme-a .top-index-link a 
	background-color #29aaac 
	text-decoration none
	color #fff
	display block
	position relative
	padding 22px 70px
	overflow hidden
	white-space nowrap
	text-overflow ellipsis
	font-size 24px
	text-shadow none

.top-index-link a i 
	display block
	position absolute
	border-width 12px 
	border-style solid
	border-color transparent
	border-top-color #fff
	right 25px
	top 28px

.index-main-block-wrapper
	position relative 
	overflow hidden
	clear both
	padding 0 1em

.imb-content
	position relative
	overflow hidden
	clear both
	margin-bottom 35px
	border-left 1px solid #bfbfbf
	border-right 1px solid #bfbfbf
	border-bottom 1px solid #bfbfbf
	border-radius 0 0 40px 40px
	padding 1.5em 2em 2.5em 2em

.imb-content p 
	text-align center
	color #000
	font-size 24px
	line-height 30px
	margin-bottom 1.2em

.index-main-block > h3:first-child
	display block 
	clear both 
	overflow hidden
	border 1px solid #bfbfbf
	padding 1em 0 
	text-align center
	border-radius 40px 40px 0 0
	font-size 35px
	color #29aaac
	font-family 'Circe-bold'

.f-s 
	margin-bottom 22px

#index-page div[data-role='footer'] 
	min-height 250px 
	position relative
	padding 0 6em
	
#index-page div[data-role='footer'] i
	sprite($s-doctor) 
	display block 
	position absolute 
	right 10px  
	bottom 0

#index-page div[data-role='footer'] a.link-to-site 
	text-decoration underline
	background none
	border none
	text-shadow none
	box-shadow(none)
	display block
	margin 0
	padding 0
