#map_canvas
	width 100%
	height 100%
	min-height inherit
	position relative
	left 0
	top 0

.ui-content.map-content
	padding 0
	min-height inherit

#map-page div[data-role='footer']
	border-top 1px solid #999

#map-page div[data-role='header']
	border-bottom 1px solid #999

#map-page div[data-role='footer'] .fixed-inn,
#map-page div[data-role='header'] .fixed-inn
	border none

a.close-map
	display block
	position absolute
	right 10px
	top 20px
	width 31px
	height 31px
	sprite($s-map-btn)