div.fixed[data-role='header']
	background-color #fff
	padding 0 1em

.fixed-inn
	position relative 
	overflow hidden
	border-bottom 1px solid #dbdbdb
	padding 1em 0
	
.fixed .fixed-inn .back-link
	text-indent -9999px
	display block
	border none
	sprite($s-back-link-bg)
	position absolute
	top 1em
	left 0
	padding 15px

.fixed .fixed-inn > strong
	font-size 18px
	font-family 'Circe-bold'
	text-align center
	display block
	overflow hidden

.fixed .fixed-inn > span
	font-size 12px
	font-family 'Circe-regular'
	text-align center
	display block 
	overflow hidden

.fixed form.ui-filterable
	display block
	padding 1em 1em .5em 1em
	position relative

.fixed form.ui-filterable > i
	display block
	position absolute
	right 27px
	top 25px
	sprite($s-search-icon)

.fixed form.ui-filterable input
	background-color #fff
	color #000
	font-size 13px
	font-family 'Circe-Regular'
	border 2px solid #dbdbdb
	padding 0 35px 0 20px
	text-shadow none
	border-radius 30px
	height 40px

::-webkit-input-placeholder 
	color #000
	opacity 1
	position relative
	top 2px

::-moz-placeholder
	color #000
	opacity 1

.fixed .ui-input-has-clear
	padding-right 0

.ui-content.c-content
	padding-right 0
	padding-left 2em
	overflow-y auto

.c-content ul[datarole='listview'] li
	position relative
	overflow hidden
	clear both
	border-top 1px solid #d9d9d9
	padding 1em 4em 1em 0

.c-content ul[datarole='listview'] li > strong
	display block
	clear botn
	color #6f6f6f
	font-size 13px
	margin-bottom 3px
	font-weight 400
	font-family 'Circe-regular'

.c-content ul[datarole='listview'] li > span
	font-size 11px
	color #6f6f6f

.c-content ul[datarole='listview'] li > em
	color #bfbfbf
	position absolute
	font-style normal
	top 13px 
	right 35px
	font-size 11px

#select-metro .c-content ul[datarole='listview'] li > strong
	margin-bottom 0

.c-content ul[datarole='listview'] li.selected > strong,
.c-content ul[datarole='listview'] li.selected > em
	color #fe5822

.c-content ul[datarole='listview'] li > i
	display block
	sprite($s-arrow)
	position absolute
	top 50%
	margin-top -9px
	right 15px