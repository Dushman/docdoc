.send-review-wrapper
	padding-left 36px
	padding-right 36px

.send-review-top-block
	position relative
	overflow hidden
	clear both
	border-radius 20px
	border 1px solid #bfbfbf
	gradient(#ffffff, #fdfdfd, #fafafa)
	margin-bottom 15px

.send-review-title
	position relative
	overflow hidden
	clear both
	border-bottom 1px solid #bfbfbf
	text-align center
	padding 1em 3em

.send-review-title strong
	margin-bottom .4em
	display block
	clear both
	font-size 19px
	color #29aaac
	font-weight 400
	font-family 'Circe-bold'

.send-review-title p
	margin 0
	font-size 12px
	line-height 18px

.send-review-form
	position relative
	overflow hidden
	clear both
	padding 18px 20px 0 20px

.send-review-form .form-item
	position relative
	clear both
	overflow hidden
	margin-bottom 10px

.send-review-form .form-item > i
	display block
	position absolute
	top 4px 
	left 5px

.send-review-form .form-item.item-1 > i
	sprite($s-review-img-1)

.send-review-form .form-item.item-2 > i
	sprite($s-review-img-2)

.send-review-form .form-item.item-4 > i
	sprite($s-review-img-3)

.send-review-form .form-item input[type='text'],
.send-review-form .form-item input[type='tel'],
.send-review-form .form-item textarea
	background-color #2cabad
	border 1px solid #2cabad
	margin 0
	color #fff
	font-family 'Circe-regular'
	font-size 13px
	text-shadow none
	box-shadow(none)
	padding 8.5px 10px 9px 40px
	border-radius 20px
	-webkit-box-shadow none
	-moz-box-shadow none
	box-shadow none
	-webkit-appereance none

.send-review-form .form-item textarea
	resize none
	height 80px!important
	width 100%

.send-review-form .form-item input::-webkit-input-placeholder,
.send-review-form .form-item textarea::-webkit-input-placeholder
	color #fff
	opacity 1

.send-review-form .form-item input::-moz-placeholder,
.send-review-form .form-item textarea::-moz-placeholder
	color #fff
	opacity 1

.send-review-form .form-item input:-ms-input-placeholder,
.send-review-form .form-item textarea:-ms-input-placeholder
	color #fff
	opacity 1
	
a.textarea-spoiler,
a.textarea-spoiler:hover,
a.textarea-spoiler:active,
a.textarea-spoiler:visited
	position relative
	text-decoration none
	display inline-block
	border-bottom 2px dotted #fe5822
	color #fe5822
	text-shadow none

.send-review-form .form-item.item-3
	text-align center
	padding-top 10px
	padding-bottom 20px

a.textarea-spoiler > i
	display block
	border-width 4px
	border-style solid
	border-color transparent
	border-top-color #fc5412
	position absolute
	right -13px
	top 7px

.send-review-form .form-item.item-4
	display none
	margin-bottom 20px

.send-review-btn-block
	clear both
	position relative
	overflow hidden
	border 3px solid #e9d9d3
	border-radius 28px
	margin 0 20px
	float left
	z-index 3

.send-review-btn-block > a
	text-decoration none
	text-transform uppercase
	border 2px solid #cd4005
	background-color #fc5512
	display block
	font-size 15px
	line-height 15px
	position relative
	padding 13px 50px 13px 23px
	letter-spacing 1px
	border-radius 26px
	z-index 1

.send-review-btn-block > a,
.send-review-btn-block > a:hover,
.send-review-btn-block > a:active,
.send-review-btn-block > a:visited
	color #fff
	text-shadow none
	text-decoration none

.send-review-btn-block > a > i
	display block
	position absolute
	right 23px
	top 8px
	sprite($s-check)

.review-rating-block
	position relative
	overflow hidden
	clear both
	padding-left 20px
	margin-bottom 5px

.review-rating-block .review-rating-item
	position relative
	overflow hidden
	clear both
	margin-bottom 10px

.review-rating-block .review-rating-item > span
	float left
	text-transform uppercase
	font-size 11px
	line-height 15px

.range-wrap
	float left
	margin-right 10px
	overflow hidden
	width 104px
	height 15px

.range-wrap div.ui-slider
	height auto
	margin 0
	position relative

.range-wrap div.ui-slider .ui-slider-track
	margin 0
	top 0
	height 15px
	sprite($s-five-stars-empty)

.range-wrap input[type='number']
	display none

.range-wrap .ui-slider-track .ui-btn.ui-slider-handle
	height 15px
	width 15px
	top 0
	margin-left -7.5px
	margin-right -7.5px

.range-wrap .ui-btn-active
	border-color transparent!important
	background-color transparent!important
	sprite($s-five-stars-full)

