@media only screen and (min-width: 500px){

    .ui-page {
        width:500px!important;
        margin:0 auto!important;
        position:relative!important;  	
    }

    .panel-btn{
        display:none!important;
    }

    .fixed form.ui-filterable{
        width:500px;
        margin:0 auto;
        position:relative;
        left:16px;
    }

    #index-page div[data-role="header"]{
        position:fixed;
        width:100%;
        left:0;
        top:0;
        padding-top:1em;
    }

    .index-img-wrapper{
        margin-top:30px;
    }

    .w-500{
        width:500px;
        margin-left:auto;
        margin-right:auto;
    }

}