{
  // Custom options
  'functions': false
}

{{#items}}
${{name}} = {{px.x}} {{px.y}} {{px.offset_x}} {{px.offset_y}} {{px.width}} {{px.height}} {{px.total_width}} {{px.total_height}} '{{{escaped_image}}}';
{{/items}}

{{#options.functions}}
spriteWidth($sprite) {
    width: $sprite[4];
}

spriteHeight($sprite) {
    height: $sprite[5];
}

spritePosition($sprite) {
    background-position: $sprite[2] $sprite[3];
}

spriteImage($sprite) {
    background-image: url(../public/img/$sprite[8]);
}

sprite($sprite) {
    spriteImage($sprite)
    spritePosition($sprite)
    spriteWidth($sprite)
    spriteHeight($sprite)
}
{{/options.functions}}
